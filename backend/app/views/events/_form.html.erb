
<%= form_with(model: @event, local: true) do |f| %>
  <%= render 'common/errors', resource: @event %>

  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label", for: "name" %>
    <div class="col-sm-10">
      <%= f.text_field :name, value: @event.name ||= Faker::FunnyName.name, class: "form-control", id: "name" %><br>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label", for: "description" %>
    <div class="col-sm-10">
      <%= f.text_area :description, value: @event.description ||= Faker::Lorem.sentence, class: "form-control", id: "description" %><br>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :date, class: "col-sm-2 col-form-label", for: "date" %>
    <div class="col-sm-10">
      <%= f.date_field :date, class: "form-control", id: "date" %><br>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :route_id, class: "col-sm-2 col-form-label", for: "event_route_id" %>
    <div class="col-sm-10">
      <% selected = @event.route_id.present? ? {selected: @event.route_id} : { } %>
      <%= f.collection_select(:route_id, Route.all, :id, :name, {}, {:class => 'form-control'})%><br>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :guide_id, class: "col-sm-2 col-form-label", for: "guide" %>
    <div class="col-sm-10">
      <% selected = @event.guide.present? ? {selected: @event.guide.id} : { } %>
      <%= f.collection_select(:guide_id, User.all, :id, :last_name, {:include_blank => 'Choose guide', **selected}, {:class => 'form-control'})%>
    </div>
  </div>

  <div class="actions actions--right">
    <%= f.submit t("#{@event.new_record? ? 'helpers.links.new' : 'helpers.links.edit' }"), class: "btn btn-info"%>
    <%= link_to t('helpers.links.back'), events_path, class: "btn btn-info" %>
  </div>
<% end %>