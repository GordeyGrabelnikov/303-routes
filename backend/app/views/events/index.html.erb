  <div class="tabbable">
    <ul class="nav nav-tabs padding-18">
      <li class="active">
        <a data-toggle="tab" href="#home">
          <i class="green ace-icon fa fa-user bigger-120"></i>
          Published events
        </a>
      </li>

      <li>
        <a data-toggle="tab" href="#friends">
          <i class="blue ace-icon fa fa-users bigger-120"></i>
          Events history
        </a>
      </li>

      <li>
        <% if current_user.present? && current_user.admin?  %>
          <a data-toggle="tab" href="#unpublished_events">
            <i class="orange ace-icon fa fa-rss bigger-120"></i>
            Unpublished events
          </a>
        <% end %>
      </li>

      <li>
        <%= form_tag events_path, method: :get do %>
          <%= text_field_tag :search, params[:search] %>
          <%= select_tag :category, options_from_collection_for_select( Route.published, :id, :name), include_blank: 'Choose route'%>
          <%= submit_tag 'Search' %>
        <% end %>
      </li>
    </ul>

    <div class="tab-content no-border padding-24">
      <div id="home" class="tab-pane in active">
        <table class='table table-striped'>
          <thead>
          <tr>
            <th><%= t('.event_name')%></th>
            <th><%= t('.event_date')%></th>
            <th><%= t('.event_route')%></th>
            <th colspan="1"></th>
          </tr>
          </thead>

          <tbody>
        <%= render(partial: 'event', collection: @events.published) %>
          </tbody>
          </table>
      </div>

      <div id="friends" class="tab-pane">
        <table class='table table-striped'>
          <thead>
          <tr>
            <th><%= t('.event_name')%></th>
            <th><%= t('.event_date')%></th>
            <th><%= t('.event_route')%></th>
            <th colspan="1"></th>
          </tr>
          </thead>

          <tbody>
          <%= render(partial: 'event', collection: @events.archived) %>
          </tbody>
        </table>
      </div>

      <div id="unpublished_events" class="tab-pane">
        <table class='table table-striped'>
          <thead>
          <tr>
            <th><%= t('.event_name')%></th>
            <th><%= t('.event_date')%></th>
            <th><%= t('.event_route')%></th>
            <th colspan="1"></th>
          </tr>
          </thead>

          <tbody>
        <% if current_user && current_user.admin?%>
        <%= render(partial: 'event', collection: @events.unpublished.order(:date)) %>
        <% end %>
          </table>
        <div class="space-12"></div>

        <div class="center">
          <button type="button" class="btn btn-sm btn-primary btn-white btn-round">
            <i class="ace-icon fa fa-rss bigger-150 middle orange2"></i>
            <span class="bigger-110">View more activities</span>

            <i class="icon-on-right ace-icon fa fa-arrow-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
<%= link_to t('helpers.titles.new', model: t('activerecord.models.event')), new_event_path,  class: 'btn btn-success'  %>

