<h1><%= t('.event_title')%></h1>

<%= form_tag events_path, method: :get, class: "form-short" do %>
  <%= text_field_tag :search, params[:search], class: "form-control" %>
  <%= select_tag :category, options_from_collection_for_select( Route.all, :id, :name), include_blank: 'Choose route', class: "form-control" %>
  <%= submit_tag 'Search', class: "btn btn-info" %>
<% end %>

<table class='table table-striped'>
  <thead>
  <tr>
    <th><%= t('.event_name')%></th>
    <th><%= t('.event_date')%></th>
    <th><%= t('.event_route')%></th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% if current_user && current_user.admin?%>
    <h2>Unpublished events</h2>
    <%= render(partial: 'event', collection: @events.unpublished.order(:date)) %>
  <% end %>
</table>

<table class='table table-striped'>
  <thead>
  <tr>
    <th><%= t('.event_name')%></th>
    <th><%= t('.event_date')%></th>
    <th><%= t('.event_route')%></th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
    <h2>Published</h2>
    <%= render(partial: 'event', collection: @events.published) %>
  </tbody>
  </table>



<br>

<%= link_to t('helpers.titles.new', model: t('activerecord.models.event')), new_event_path,  class: 'btn btn-success'  %>

