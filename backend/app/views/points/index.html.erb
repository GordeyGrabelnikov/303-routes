<div class="tabbable">
  <div class="tabbable-header">
    <%= form_tag points_path, method: :get, class: "search-form" do %>
      <%= text_field_tag :search, params[:search], class: "form-control" %>
      <%= submit_tag t('helpers.links.search'), class: "btn btn-info form-control"  %>
    <% end %>
    <%= link_to '', new_point_path, class: 'icon icon--big icon--add', title: t('helpers.titles.new', model: t('activerecord.models.point')) %>
  </div>

  <% if current_user.present? && current_user.admin? %>
  <ul class="nav nav-tabs padding-18">
    <li class="active">
      <a data-toggle="tab" href="#home">
        <i class="green ace-icon fa fa-user bigger-120"></i>
        <%= t('helpers.titles.published_point') %>
      </a>
    </li>

    <li>
      <% if current_user.present? && current_user.admin?  %>
        <a data-toggle="tab" href="#unpublished_events">
          <i class="orange ace-icon fa fa-rss bigger-120"></i>
          <%= t('helpers.titles.unpublished_route') %>
        </a>
      <% end %>
    </li>
  </ul>
  <% end %>
  <div class="tab-content no-border padding-24">
    <div id="home" class="tab-pane in active">
      <%= render('points_list', point_set: @points.published, status: 'published_point') %>
    </div>

    <div id="unpublished_events" class="tab-pane">
      <%= render('points_list', point_set: @points.unpublished, status: 'unpublished_point') %>
      <div class="space-12"></div>

      <div class="center">
        <button type="button" class="btn btn-sm btn-primary btn-white btn-round">
          <i class="ace-icon fa fa-rss bigger-150 middle orange2"></i>
          <span class="bigger-110">View more activities</span>

          <i class="icon-on-right ace-icon fa fa-arrow-right"></i>
        </button>
      </div>
    </div>
  </div>
</div>

