<%= form_with(model: @point, local: true) do |f| %>
  <%= render 'common/errors', resource: @point %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :coordinates %>
    <%= f.text_field :coordinates %>

    <%= f.label :image_url %>
    <%= f.text_field :image_url %>

    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "#{@point.new_record? ? 'Create' : 'Update'}"%>
  </div>
<% end %>
