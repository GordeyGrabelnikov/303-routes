<p>
  <strong> Route name: </strong>
  <%= @route.name %>
</p>

<p>
  <strong> Type: </strong>
  <%= @route.route_type %>
</p>

<p>
  <strong>Points of route:</strong>
  <% @route.points.each do |x|%>
  <div>
    <%= link_to "#{x.name}", x %>
  </div>
<% end %>
</p>
<p>
  <strong> Creator: </strong>
  <%= @route.user.first_name %>
  <%= @route.user.last_name %>
</p>


<div>
<p>
  <% @route.route_images.each do |image| %>

  <%= image_tag(image) if @route.route_images.attached? %>

  <% end %>


<ul>
  <%= render(partial: 'comments/comment', collection: @route.comments) %>
</ul>

<div>
<%= render 'comments/form', commentable: @route %>
</div>
<%= link_to t('helpers.links.back'), routes_path %>

<%= link_to 'Update', edit_route_path %>
