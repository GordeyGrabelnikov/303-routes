<li>
  <%= comment.comment %> -
  <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>

  <%= form_with(model: [ comment, Comment.new ], local: true) do |f| %>
    <%= f.text_area :comment, placeholder: "Add a Reply" %><br/>
    <%= f.submit "Reply"  %>
  <% end %>

  <ul>
    <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>
</li>