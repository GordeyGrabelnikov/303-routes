<!DOCTYPE html>
<html>
  <head>
    <title>Routes303</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
  <div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div>
  <% if user_signed_in? %>
      <div class="media">
        <div class="media-left">
      <%= image_tag(current_user.avatar, class: "media-object", style: "width:45px;height:45px;border-radius:100%") if current_user.avatar.attached? %>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= "#{current_user.first_name} #{current_user.last_name}" %></h4>
          <%= link_to 'Exit', destroy_user_session_path, method: :delete,  class: 'btn btn-link'  %>
          <%= link_to 'Edit', edit_user_registration_path(current_user), class: 'btn btn-link'  %>
        </div>
      </div>
  <% else %>
    <%= link_to 'Sign in', new_user_session_path,  class: 'btn btn-link' %>
  <% end %>
  </div>

  <%= yield %>

  <p>Copyright Â© 2019 Grabelnikov Gordey</p>
  </div>
  </body>
</html>
